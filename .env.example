# Mercado Livre OAuth Configuration
ML_CLIENT_ID=your_mercado_livre_client_id
ML_CLIENT_SECRET=your_mercado_livre_client_secret
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Security Configuration (Optional)
# Comma-separated list of allowed Mercado Livre user IDs
ALLOWED_USER_IDS=123456789,987654321

# Legacy tokens (will be replaced by OAuth flow)
ML_ACCESS_TOKEN=your_access_token_here
ML_REFRESH_TOKEN=your_refresh_token_here
ML_USER_ID=your_user_id_here

# Cache (Redis/Vercel KV)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Application Configuration
NODE_ENV=production

# Error Monitoring (Sentry)
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Vercel (auto-populated in production)
VERCEL_URL=
VERCEL_ENV=
VERCEL_REGION=

# Development
NODE_ENV=development
