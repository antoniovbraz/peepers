# ==================== PEEPERS ENTERPRISE v2.0.0 ====================
# Arquitetura Multi-Tenant - Configurações Críticas
# Atualizado: 2025-09-20

# ==================== MULTI-TENANT CONFIGURATION ====================
# Habilita/desabilita modo multi-tenant (padrão: false para compatibilidade)
ENABLE_MULTI_TENANT=false

# Domínio base para subdomínios de tenant (ex: tenant1.peepers.com)
TENANT_BASE_DOMAIN=peepers.vercel.app

# Configurações de tenant padrão (fallback)
DEFAULT_TENANT_SLUG=default
DEFAULT_TENANT_NAME="Peepers Default"

# Limites globais de tenant
MAX_TENANTS_PER_USER=5
MAX_USERS_PER_TENANT=50

# ==================== MERCADO LIVRE CONFIGURATION ====================
ML_CLIENT_ID=your_mercado_livre_client_id
ML_CLIENT_SECRET=your_mercado_livre_client_secret
NEXT_PUBLIC_APP_URL=https://peepers.vercel.app

# ==================== SECURITY CONFIGURATION ====================
# Lista separada por vírgula de IDs de usuário do ML permitidos
ALLOWED_USER_IDS=123456789,987654321

# Secret para validação de webhooks do ML
ML_WEBHOOK_SECRET=your_ml_webhook_secret

# ==================== CACHE CONFIGURATION ====================
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# ==================== STRIPE CONFIGURATION ====================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ==================== STRIPE PRICE IDs ====================
# IMPORTANTE: Crie estes preços no seu dashboard do Stripe
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly
STRIPE_PRICE_STARTER_QUARTERLY=price_starter_quarterly
STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly
STRIPE_PRICE_BUSINESS_MONTHLY=price_business_monthly
STRIPE_PRICE_BUSINESS_QUARTERLY=price_business_quarterly
STRIPE_PRICE_BUSINESS_YEARLY=price_business_yearly
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly
STRIPE_PRICE_ENTERPRISE_QUARTERLY=price_enterprise_quarterly
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly

# ==================== MONITORING CONFIGURATION ====================
# Sentry para monitoramento de erros
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Webhook para alertas de erro
ALERT_EMAIL_WEBHOOK=https://your-alert-webhook-url

# ==================== APPLICATION CONFIGURATION ====================
NODE_ENV=production

# ==================== LEGACY TOKENS ====================
# Estes serão substituídos pelo fluxo OAuth
ML_ACCESS_TOKEN=your_access_token_here
ML_REFRESH_TOKEN=your_refresh_token_here
ML_USER_ID=your_user_id_here

# ==================== VERCEL CONFIGURATION ====================
# Auto-populado em produção
VERCEL_URL=
VERCEL_ENV=
VERCEL_REGION=

# ==================== DEVELOPMENT ====================
NODE_ENV=development
